<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>TadEventosS</display-name>
    <servlet>
        <description/>
        <display-name>login</display-name>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>br.edu.iftm.tadeventos.controllers.LoginController</servlet-class>
    </servlet>
    <servlet>
        <description/>
        <display-name>eventos</display-name>
        <servlet-name>EventosController</servlet-name>
        <servlet-class>br.edu.iftm.tadeventos.controllers.EventosController</servlet-class>
    </servlet>
    <servlet>
        <description/>
        <display-name>busca</display-name>
        <servlet-name>BuscaController</servlet-name>
        <servlet-class>br.edu.iftm.tadeventos.controllers.BuscaController</servlet-class>
    </servlet>
    <servlet>
        <description/>
        <display-name>cadastro</display-name>
        <servlet-name>RegistrationController</servlet-name>
        <servlet-class>br.edu.iftm.tadeventos.controllers.RegistrationController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EventosController</servlet-name>
        <url-pattern>/eventos/publicar</url-pattern>
        <url-pattern>/eventos/editar</url-pattern>
        <url-pattern>/eventos/remover</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscaController</servlet-name>
        <url-pattern>/busca</url-pattern>
        <url-pattern>/busca/evento</url-pattern>
        <url-pattern>/busca/detalhes</url-pattern>
        <url-pattern>/busca/compra</url-pattern>
        <url-pattern>/busca/minhas-compras</url-pattern>
        <url-pattern>/busca/minhas-publicacoes</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrationController</servlet-name>
        <url-pattern>/cadastro</url-pattern>
    </servlet-mapping>
</web-app>
